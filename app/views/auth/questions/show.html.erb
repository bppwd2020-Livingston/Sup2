<div class="col-11 m-auto">
  <h1><%= @question.title %></h1>
  <p>Posted By: <%= @question.user.email %></p>
  <p><%= @question.body %></p>
  <p><%= @question.whyt %></p>
  <p><%= link_to "Download zip file", attachment_url(@question, :zip_file) %></p>
  <hr />
  <h4>Responses</h4>
  <% @question.responses.each do |r| %>
    <p><%= r.body %></p>
    <p>Submitted By: <%= r.user.email %></p>
    <p><%= link_to "Download zip file", attachment_url(r, :zip_file) %></p>
    <hr />
  <% end %>
</div>
