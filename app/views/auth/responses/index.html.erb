<div class="col-11 m-auto">
  <h1>Listing All Responses</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Response</th>
        <th scope="col">Posted By</th>
      </tr>
    </thead>
    <tbody>
      <% @responses.each do |r| %>
        <tr>
          <th scope="row"><%= r.id %></th>
          <td>
            <p><strong><%= link_to r.question.title, auth_responses_show_url(id: r.id) %></strong></p>
            <p><%= r.body %></p>
            <p>
	        	<%= link_to "[Edit]", auth_responses_edit_path(id: r.id), class: "ml-2" %> | 
	            <%= link_to '[Destroy]', auth_responses_destroy_path(id: r.id), method: :delete, data: { confirm: 'Are you sure?' } %>
            </p>
          </td>
          <td><%= r.user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
