<div class="col-11 m-auto">
  <h1>Listing All Roles</h1>
  <p><%= link_to 'Add New Role', new_role_path %></p>
  <table class="table table-hover">
  	<thead>
    	<tr>
			<th>Title</th>
			<th></th>
    	</tr>
  	</thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <th scope="row"><%= role.title %></th>
          <td>
	          <% if role.title != "administrator" %>
	          	<%= link_to 'Show', role %> | 
			  	<%= link_to 'Edit', edit_role_path(role) %> | 
			  	<%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %>
			  <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
